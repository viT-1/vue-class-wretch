{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"experimentalDecorators": true,
		"module": "es6",
		"moduleResolution": "node",
		"outDir": "dist",
		"paths": {
			"~/*": ["./*"],
			"vue": ["https://cdn.jsdelivr.net/npm/vue@2.6.10/dist/vue.esm.browser.js"],
			"vue-class-component": ["https://cdn.jsdelivr.net/npm/vue-class-component@7.1.0/dist/vue-class-component.esm.js"]
		},
		"plugins": [{ "transform": "typescript-transform-paths" }],
		"strict": true,
		"target": "esnext"
	},
	"exclude": [
		"**/node_modules/*"
	]
}